<%- model_class = Animal -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @animal.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:image) %>:</strong></dt>
  <dd>
		<%= image_tag(@animal.image.big) if @animal.image? %>
  </dd>
  <dt><strong><%= model_class.human_attribute_name(:species) %>:</strong></dt>
  <dd><%= @animal.species %></dd>
  <dt><strong><%= model_class.human_attribute_name(:breed) %>:</strong></dt>
  <dd><%= @animal.breed %></dd>
  <dt><strong><%= model_class.human_attribute_name(:note) %>:</strong></dt>
  <dd><%= @animal.note %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              animals_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_animal_path(@animal), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              animal_path(@animal),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
