<%- model_class = AnimalHistory -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:date_ini) %>:</strong></dt>
  <dd><%= l(@animal_history.date_ini, format: :date) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:animal_id) %>:</strong></dt>
  <dd><%= @animal_history.animal.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:vet_id) %>:</strong></dt>
  <dd><%= @animal_history.vet.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:note) %>:</strong></dt>
  <dd><%= @animal_history.note %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              animal_histories_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_animal_history_path(@animal_history), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              animal_history_path(@animal_history),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
