<%- model_class = Vet -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:fone) %></th>
      <th><%= model_class.human_attribute_name(:crv) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @vets.each do |vet| %>
      <tr>
        <td><%= link_to vet.id, vet_path(vet) %></td>
        <td><%= vet.name %></td>
        <td><%= vet.fone %></td>
        <td><%= vet.crv %></td>
        <td><%=l vet.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      vet_path(vet), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_vet_path(vet), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      vet_path(vet),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="7"><%= paginate @vets %></td>
    </tr>
  </tfoot>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_vet_path,
            :class => 'btn btn-primary' %>
